<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ITDepartment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:weightSum="6"
        android:id="@+id/linear"
        android:background="@color/color2"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:gravity="left">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:id="@+id/backButton"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>


        <TextView
            android:id="@+id/contact_it_title"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="צור קשר עם צוות IT"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_alignParentTop="true"/>

    </LinearLayout>


    <EditText
        android:id="@+id/contact_it_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן את הודעתך..."
        android:background="@drawable/shape_edittext"
        android:padding="7dp"
        android:textColor="@color/black"
        android:textColorHint="@color/color4"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/send_contact_it_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שלח"
        android:background="@drawable/shape_button"
        android:padding="7dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contact_it_message_input"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
